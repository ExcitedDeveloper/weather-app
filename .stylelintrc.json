{
  "extends": ["stylelint-config-standard"],
  "ignoreFiles": ["dist/**/*.css"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ],
    "no-empty-source": null,
    "comment-empty-line-before": null,
    "selector-id-pattern": null,
    "selector-class-pattern": null
  }
}